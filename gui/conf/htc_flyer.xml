<?xml version="1.0" encoding="UTF-8"?>

<!--  Android HTC flyer configuration file   -->
<!--   Screen resolution 600x1024   -->

<Android-config>
  <CanalPattern>
    <Pattern canal="keyboard" value="flyer-keypad-v0"/>
    <Pattern canal="keyboard2" value="Ntrig-touchscreen"/>
    <Pattern canal="touchscreen" value="Ntrig-touchscreen"/>
  </CanalPattern>
  <KeyMapping canal="keyboard">
    <Key name="POWER" code="116"/>
    <Key name="VOLUME_UP" code="115"/>
    <Key name="VOLUME_DOWN" code="114"/>
  </KeyMapping>
  <SoftKeyMapping>
    <Key name="HOME" avgX="195" avgY="1017"/>
    <Key name="MENU" avgX="327" avgY="1017"/>
    <Key name="BACK" avgX="458" avgY="1017"/>
  </SoftKeyMapping>
  <Touchscreen>
    <Pattern name="XY" value="3 42 "/>
    <Pattern name="ratioX" value="12"/>
    <Pattern name="ratioY" value="9.375"/>
    <Threshold name="move" value="15"/>
    <Option name="sendMouseDownForMove" value="true"/>
    <Option name="useSmartTouchDetection" value="true" />
	<Option name="useMonkeyForPress" value="true" />
   </Touchscreen>
</Android-config>
